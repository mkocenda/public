<style>
    .tab {
        height: 700px !important;
    }

    .tab-content_form {
        min-height: 540px;
    }
</style>

<div class="modal fade" id="actionDetailFormModal">
    <div class="modal-dialog">
        <div class="modal-content card">
            <div class="row">
                <div class="card-header card-header-info card-header-icon">
                    <div class="col-md-12"><h1 class="card-title pull-center">{_detail_action}</h1></div>
                </div>
            </div>
            <div class="row">
                <div class="modal-body">
                    <div class="wrapper">
                        <div class="tabs">
                            <div class="tab">
                                <input type="radio" name="css-tabs" id="tab-1" checked class="tab-switch">
                                <label for="tab-1" class="tab-label">{_action}</label>
                                <div class="tab-content_form">
                                    <div class="animate form">
                                        {form actionFormModal}
                                            <div class="row">
                                                <div class="col-md-6">
                                                    {label name}
                                                    {input name class=>"form-control"}
                                                    {label motto}
                                                    {input motto class=>"form-control"}
                                                    {label starttime}
                                                    {input starttime class=>"form-control"}
                                                    {label stoptime}
                                                    {input stoptime class=>"form-control"}
                                                </div>
                                                <div class="col-md-6">
                                                    {label limit}
                                                    {input limit class=>"form-control"}
                                                    {label agefrom}
                                                    {input agefrom class=>"form-control"}
                                                    {label ageto}
                                                    {input ageto class=>"form-control"}

                                                        <div style="height: 25px"></div>
                                                        {label waiting_list}
                                                        {input waiting_list class=>"form-control" }

                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-12">
                                                    {label description}
                                                     {input description class=>"form-control"}
                                                </div>
                                            </div>
                                            <br>
                                            {input id}
                                        {/form}
                                    </div>
                                </div>
                            </div>
                            <div class="tab">
                                <input type="radio" name="css-tabs" id="tab-2" class="tab-switch">
                                <label for="tab-2" class="tab-label">{_stuffs}</label>
                                <div class="tab-content_form">

                                    {snippet stuffsGrid}
                                        {control stuffsGrid}
                                    {/snippet}
                                </div>
                            </div>
                            <div class="tab">
                                <input type="radio" name="css-tabs" id="tab-3" class="tab-switch">
                                <label for="tab-3" class="tab-label">{_documents}</label>
                                <div class="tab-content_form">
                                    {snippet actionDocumentsGrid}
                                        {control actionDocumentsGrid}
                                    {/snippet}
                                </div>
                            </div>
                            <div class="tab">
                                <input type="radio" name="css-tabs" id="tab-4" class="tab-switch">
                                <label for="tab-4" class="tab-label">{_reservation}</label>
                                <div class="tab-content_form">
                                    {snippet reservedPartsGrid}
                                        {control reservedPartsGrid}
                                    {/snippet}
                                </div>
                            </div>
                            <div class="tab">
                                <input type="radio" name="css-tabs" id="tab-5" class="tab-switch">
                                <label for="tab-5" class="tab-label">{_participants}</label>
                                <div class="tab-content_form">

                                    {snippet actionAllowParticipantsGrid}
                                        {control actionAllowParticipantsGrid}
                                    {/snippet}

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div style="position: absolute; bottom: 2px; width: 100%">
                    <div class="alignright">
                        <a id="cancel" class="btn btn-warning">Storno</a>
                        <a id="submit" class="btn btn-success">Zapsat</a>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <style>
        .btn-close-modal {
            float: right;
            padding-top: 5px;
        }

        .card-title {
            padding-left: 10px;
        }

        .modal-dialog {
            min-width: 900px;
        }

        .modal-body {
            padding-left: 25px;
            padding-right: 25px;
        }
    </style>

    <script>
        let $modal = $('#actionDetailFormModal');
        $waiting_list = $('#frm-actionFormModal-waiting_list');
        $modal.modal('show');
        $('#cancel').on('click', function () {
            $modal.modal('hide');
        });

        $('#submit').on('click', function () {
            $('#frm-actionFormModal').submit();
        });

        if ($(location).attr('hash') != '') {
            $('#' + $(location).attr('hash').substring(1)).prop('checked', true);
        }
        $waiting_list.attr('disabled','disabled');
    </script>