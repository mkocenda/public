{block content}

<div class="row">
    <div class="col-md-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>{_planned}</h2>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <div class="col-md-12">
                    <div style="float:right">
                        <a n:href="add!" class="btn btn-success btn-flat btn-sm">
                            <i class="fa fa-solid fa-tent"></i> {_addAction}
                        </a>
                    </div>
                </div>
                {snippet actionsGrid}
                    {control actionsGrid}
                {/snippet}
            </div>
        </div>
    </div>
</div>

{snippet modals}
    {ifset $modalTemplate}
        {include $modalTemplate}
    {/ifset}
{/snippet}

<style>
    ol, ul {
        margin-top: 0;
