						<td class="col-md-10">{$stuff_birthday->surname} {$stuff_birthday->name} / {$stuff_birthday->age} </td>
						<td class="col-md-4">{$stuff_birthday->calendar_date} </td>
					</tr>
				{/foreach}
			</table>
		</div>
	</div>
</div>