<style>
    .card-title {
        padding-left: 10px;
    }

    .modal-dialog{
        min-width: 600px;
    }
    .modal-body{
        padding-left: 25px;
        padding-right: 25px;
    }
</style>
<div class="modal fade" id="typeFormModal">
    <div class="modal-dialog">
        <div class="modal-content card">
            <div class="row">
                <div class="card-header card-header-info card-header-icon">
                    <div class="col-md-12"><h1 class="card-title pull-center">{_stuffType}</h1></div>
                </div>
            </div>
            <div class="row">
                <div class="modal-body">
                    <div class="animate form">
                        {form typeFormModal}
                            {label name}
                            {input name class=>"form-control"}
                            {label order}
                            {input order class=>"form-control"}
                            {input id}
                            {input organisation_id}
                            <br>
                            <div class="alignright">
                                {input cancel  class=>"btn btn-warning"}
                                {input submit  class=>"btn btn-success"}
                            </div>
                        {/form}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .btn-close-modal {
        float: right;
        padding-top: 5px;
    }

    .card-title {
        padding-left: 10px;
    }

    .icon {
        font-size: 25px;
        padding: 10px;
    }
</style>

<script>
    var $modal = $('#typeFormModal');
    $modal.modal('show');
    $('[name="cancel"]').on('click', function () {
        $modal.modal('hide');
    });
</script>
